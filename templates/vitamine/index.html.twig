{% extends 'template-admin.html.twig' %}

{% block title %}Index apports nutritionnels{% endblock %}

{% block body %}
    <br><br>

<div class="d-flex justify-content-center">
    <h1>Index apports nutritionnels</h1>
</div>

    <br><br>

<div class="d-flex justify-content-center">
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Nom apport nutritionnel</th>
                <th>ImageSrc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vitamine in vitamines %}
            <tr>
                <td>{{ vitamine.nom }}</td>
                <td><img src="{{ vitamine.imageSrc }}"></td>
                <td>
                    <button type="button" class="btn btn-secondary"><a href="{{ path('vitamine_show', {'id': vitamine.id}) }}" class="text-light">Voir</a></button>
                    <hr>
                    <button type="button" class="btn btn-secondary"><a href="{{ path('vitamine_edit', {'id': vitamine.id}) }}" class="text-light">Modifier</a></button>
                    <hr>
                    {{ include('vitamine/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center">
    <button type="button" class="btn btn-secondary"><a href="{{ path('vitamine_new') }}" class="text-light">Cr√©er nouveau</a></button>
</div>
{% endblock %}

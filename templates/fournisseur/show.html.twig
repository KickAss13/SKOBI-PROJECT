{% extends 'template-admin.html.twig' %}

{% block title %}Profil fournisseur{% endblock %}

{% block body %}
<br><br>

<div class="d-flex justify-content-center">
    <h1>Profil fournisseur</h1>
</div>

    <br><br>

<div class="container d-flex justify-content-center">
    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th class="bg-secondary text-white">Id</th>
                <td>{{ fournisseur.id }}</td>
            </tr>
            <tr>
                <th class="bg-secondary text-white">Nom fournisseur</th>
                <td>{{ fournisseur.nom }}</td>
            </tr>
            <tr>
                <th class="bg-secondary text-white">Description</th>
                <td>{{ fournisseur.content }}</td>
            </tr>
            <tr>
                <th class="bg-secondary text-white">Source image</th>
                <td>{{ fournisseur.imageSrc }}</td>
            </tr>
            <tr>
                <th class="bg-secondary text-white">Date Publication</th>
                <td>{{ fournisseur.datePublication ? fournisseur.datePublication|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center">
    <button type="button" class="btn btn-secondary"><a href="{{ path('fournisseur_index') }}" class="text-light">Retour Ã  l'index</a></button>
 

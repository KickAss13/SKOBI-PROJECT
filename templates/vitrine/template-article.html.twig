{% extends 'template-page.html.twig' %}

{% block title %}{{ article.nom }}{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{asset('assets/css/style-template-article.css') }}">{% endblock %}

{% block body %}

        <h3>{{ article.nom }}</h3>

        <h4>{{ article.slogan }}</h4>

        <div class="row">
            <div class="col-2">
            </div>

            <div class="col-4">
                
                <div class="slider">
                    <input type="radio" name="slide_switch" id="id1"/>
                    <label for="id1">
                        <img src="{{ article.imageSrc1 }}" width="100">
                    </label>
                    <img src="{{ article.imageSrc1 }}">
                    
                    <input type="radio" name="slide_switch" id="id2" checked="checked"/>
                    <label for="id2">
                        <img src="{{ article.imageSrc2 }}" width="100">
                    </label>
                    <img src="{{ article.imageSrc2 }}">

                    <input type="radio" name="slide_switch" id="id3" checked="checked"/>
                    <label for="id3">
                        <img src="{{ article.imageSrc3 }}" width="100">
                    </label>
                    <img src="{{ article.imageSrc3 }}">
                </div>

            </div>

            <div class="col-4 d-flex flex-column info-sauce">
                <p class="descript">{{ article.description }}</p>
                <p class="ingred"><span>Ingr√©dients : </span>{{ article.ingredients }}</p>
                <p class="ingred"><span>Apports nutritionnels : </span>  
                                                            {% for vitamine in article.vitamines %}
                                                                    <img src="{{ vitamine.imageSrc }}" width="40" title="{{vitamine.nom}}">
                                                            {% endfor %}                                          
                </p>
                <p class="ingred"><span>Poids : </span>10g</p>
            </div>
        </div>

{% endblock %}

{% block javascripts %}<script src="http://thecodeplayer.com/uploads/js/prefixfree.js" type="text/javascript"></script>{% endblock %}
        


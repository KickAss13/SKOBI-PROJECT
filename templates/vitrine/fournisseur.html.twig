{% endblock %}

{% block body %}
    <h1>Fournisseurs</h1>

{# Code pour afficher les fournisseurs #}
    <div class="row">
        {% for fournisseur in fournisseurs %}

        <div class="col-lg-6 col-md-6 marge" style="background-image:url({{asset(fournisseur.imageSrc) }});background-repeat:no-repeat;background-size: cover;
        background-size: 70%;  filter: drop-shadow(8px 8px 10px black);
;
;

">
            <section>
                <div>
                    (id={{ fournisseur.id }})
                </div>
                <h3>{{ fournisseur.nom }}</h3>

                <figure>
                    <p class="cache2">{{ fournisseur.content }}</p>                
                </figure>
                <div>
                    {{ fournisseur.datePublication ? fournisseur.datePublication|date('Y-m-d H:i:s') : '' }}
                </div>                
            </section>
        </div>

        {% else %}
            <div class="col-lg-6 col-md-6 marge" style="background-image:url({{asset(fournisseur.imageSrc) }});background-repeat:no-repeat;">

{% extends 'template-admin.html.twig' %}

{% block title %}Profil évènement{% endblock %}

{% block body %}

<br><br>

<div class="d-flex justify-content-center">
    <h1>Profil évènement</h1>
</div>

    <br><br>

<div class="container d-flex justify-content-center">
    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th class="bg-secondary text-white">Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th class="bg-secondary text-white">Titre évènement</th>
                <td>{{ event.titre }}</td>
            </tr>
            <tr>
                <th class="bg-secondary text-white">Description</th>
                <td>{{ event.content }}</td>
            </tr>
            <tr>
                <th class="bg-secondary text-white">Source Image</th>
                <td>{{ event.imageSrc }}</td>
            </tr>
            <tr>
                <th class="bg-secondary text-white">Date Publication</th>
                <td>{{ event.datePublication ? event.datePublication|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="bg-secondary text-white">Adresse évènement</th>
                <td>{{ event.adress }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center">
    <button type="button" class="btn btn-secondary"><a href="{{ path('event_index') }}" class="text-light">Retour à l'index</a></button>
 
    <button type="button" class="btn btn-secondary"><a href="{{ path('event_edit', {'id': event.id}) }}" class="text-light">Modifier</a></button>

    {{ include('event/_delete_form.html.twig') }}
</div>
{% endblock %}
